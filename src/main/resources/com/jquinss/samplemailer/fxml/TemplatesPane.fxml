<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>


<VBox prefHeight="200.0" prefWidth="100.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jquinss.samplemailer.controllers.TemplatesPaneController">
	<children>
		<ListView fx:id="templateListView" prefHeight="200.0" prefWidth="200.0" />
		<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
        	<children>
            	<Button mnemonicParsing="false" onAction="#addEmailTemplate" prefHeight="25.0" prefWidth="51.0" text="Add" />
            	<Button mnemonicParsing="false" onAction="#applyEmailTemplate" text="Apply" />
            	<Button mnemonicParsing="false" onAction="#removeEmailTemplate" text="Remove" />
        	</children>
    	</HBox>
	</children>
</VBox>